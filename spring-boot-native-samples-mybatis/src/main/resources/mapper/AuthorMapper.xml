<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="io.samples.mybatis.repo.AuthorMapper">

    <select id="select" resultType="io.samples.mybatis.entity.Author">
        select
            id, name
        from
            author
        where
            id = #{id}
    </select>

</mapper>